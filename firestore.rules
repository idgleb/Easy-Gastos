rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funciones de ayuda
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // =========================
    // Usuarios
    // =========================
    match /users/{uid} {
      // Crear doc de usuario:
      // - Usuario normal: solo puede crearse a sí mismo en plan free
      // - Admin: puede crear cualquier usuario
      allow create: if isAdmin();

      // Leer su propio doc (o admin)
      allow read: if isUser(uid) || isAdmin();

      // Actualizar:
      // - Usuario normal: puede actualizar sus datos pero NO cambiar plan_id
      // - Admin: puede actualizar lo que necesite (incluido plan_id)
      allow update: if (
        isUser(uid) &&
        request.resource.data.plan_id == resource.data.plan_id
      ) || isAdmin();

      // Eliminar: solo admin
      allow delete: if isAdmin();
    }

    // =========================
    // Categorías del usuario
    // =========================
    match /users/{uid}/categories/{categoryId} {
      allow read, write: if isUser(uid) || isAdmin();
    }
    
    // =========================
    // Gastos del usuario
    // =========================
    match /users/{uid}/expenses/{expenseId} {
      allow read, write: if isUser(uid) || isAdmin();
    }
    
    // =========================
    // Planes
    // =========================
    match /plans/{planId} {
      // Cualquiera puede leer info de planes
      allow read: if true;
      // Solo admin puede crear/editar planes
      allow write: if isAdmin();
    }
  }
}