<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp"
    android:paddingTop="16dp">

        <!-- Handle indicator (Material 3) -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutline"
            android:alpha="0.4" />

        <!-- Header con Material 3 Typography -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/account_title"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseAccount"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Cerrar"
                app:icon="@drawable/ic_close"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Información del usuario con Material 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="#CCCCCC"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <!-- Avatar con Material 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="3dp">

                    <ImageView
                        android:id="@+id/ivUserAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="Avatar del usuario"
                        android:scaleType="centerCrop"
                        android:padding="12dp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_name_placeholder"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_email_placeholder"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvUserPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_plan_placeholder"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Opciones de cuenta con Material 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Configuración -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Configuración"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_action_settings"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Flecha"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Acerca de -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Acerca de"
                        app:icon="@drawable/ic_info"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_action_about"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Flecha"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Administración (solo visible para admin) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Administración"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorPrimary"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_action_admin"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Flecha"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Actualizar plan (solo visible si el plan es free) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpgradePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Actualizar plan"
                        app:icon="@drawable/ic_sync"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorPrimary"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_action_upgrade"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Flecha"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Última sincronización -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLastSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Última sincronización"
                        app:icon="@drawable/ic_sync"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:backgroundTint="@android:color/transparent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLastSyncTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_last_sync_label"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/tvLastSyncValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/account_last_sync_never"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cerrar sesión -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorError">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Cerrar sesión"
                        app:icon="@drawable/ic_logout"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorError"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_action_logout"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorError" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>



