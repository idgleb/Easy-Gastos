<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema oscuro de la aplicaciÃ³n -->
    <style name="Theme.GestorGastos" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appbar_blue</item>
        <item name="colorPrimaryVariant">@color/appbar_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Desactivar realce de autofill del sistema -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appbar_blue</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/black</item>
        <!-- Surface colors -->
        <item name="colorSurface">#FF1E1E1E</item>
        <item name="colorSurfaceVariant">#FF2C2C2C</item>
        <item name="colorOnSurface">#FFE0E0E0</item>
        <item name="colorOnSurfaceVariant">#FFB0B0B0</item>
        <!-- Background -->
        <item name="android:colorBackground">#FF121212</item>
        <item name="colorOnBackground">#FFE0E0E0</item>
        <!-- Outline -->
        <item name="colorOutline">#FF424242</item>
    </style>
    
    <style name="Theme.GestorGastos.NoActionBar" parent="Theme.GestorGastos">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>

