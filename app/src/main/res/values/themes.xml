<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GestorGastos" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appbar_blue</item>
        <item name="colorPrimaryVariant">@color/appbar_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appbar_blue</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/appbar_blue</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.GestorGastos.NoActionBar" parent="Theme.GestorGastos">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>